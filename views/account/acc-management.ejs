<!-- CONTENT HEADING -->
<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<!-- MESSAGE BLOCK -->
<%- messages() %>

<!-- Display Validation Errors -->
<% if (errors) { %>
<div id="messages">
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
</div>
<% } %>

<!-- Account Management Info -->

<div>
  <% if (locals.accountData.account_type == "Client") { %>
  <h2>Welcome, <%= locals.accountData.account_firstname %></h2>
  <% } else if (locals.accountData.account_type == "Admin" || locals.accountData.account_type == "Employee") { %>
  <h2>Welcome, <%= locals.accountData.account_firstname %></h2>

  <h3>Inventory Management</h3>
  <!-- <p>Use the links below to manage inventory.</p> -->
  <a href="/inv/management" title="Click to add and manage inventory"
    >Vehicle Management</a>
  <% } %>
</div>

<!-- <div>
  <p>You're logged in!</p>
</div> -->
