<!-- Update Account Information -->
<div>
  <h3>Update Account Information</h3>
  <!-- <p>Use the link below to update your account information.</p> -->
  <a href="/account/update/<%= locals.accountData.account_id %>" title="Click to update account information"
    >Update Account Information</a
  >
</div>
