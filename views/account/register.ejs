<!-- Display title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } %>
<!-- Display Message -->
<%- messages() %>

<!-- Display Validation Errors -->
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<!-- Registration Form -->
<form action="/account/register" method="POST" id="registration-form">
  <label for="fname">First Name</label>
  <input
    type="text"
    id="fname"
    name="account_firstname"
    placeholder="Enter your first name"
    value="<%= locals.account_firstname || '' %>"
    required
  />
  <label for="lname">Last Name</label>
  <input
    type="text"
    id="lname"
    name="account_lastname"
    placeholder="Enter your last name"
    value="<%= locals.account_lastname || '' %>"
    required
  />
  <label for="email">Email</label>
  <input
    type="email"
    id="email"
    name="account_email"
    placeholder="Enter your email address"
    value="<%= locals.account_email || '' %>"
    required
  />
  <label for="password">Password</label>
  <input
    type="password"
    id="password"
    name="account_password"
    placeholder="Enter a secure password"
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    title="Password must be at least 12 characters, contain a capital letter, a number, and a special character."
    required
  />
  <small class="password-help">
    Password must be:<br />
    • 12 characters minimum<br />
    • At least 1 capital letter<br />
    • At least 1 number<br />
    • At least 1 special character
  </small>
  <button type="submit">Register</button>
  <p>
    Already have an account?
    <a href="/account/login" title="Log in to your account">Log in</a>
  </p>
</form>
