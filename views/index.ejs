<!-- Upgrades Section -->
  <section id="upgrades-section">
    <h3>Delorean Upgrades</h3>
    <div class="flex upgrades-cards">
      <a href="#" title="flux-capacitor" class="upgrade-card">
        <figure class="add-col">
